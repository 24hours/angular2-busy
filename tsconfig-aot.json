{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "build/src"
    },
    "angularCompilerOptions": {
        "genDir": "compiled"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
          "src/**/*"
    ],
    "filesGlob": [
        "./index.ts",
        "./src/**/*.ts",
        "./demo/**/*.ts",
        "!./node_modules/**/*.ts",
        "typings/browser.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "resolveGlobs": true,
        "forkChecker": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
